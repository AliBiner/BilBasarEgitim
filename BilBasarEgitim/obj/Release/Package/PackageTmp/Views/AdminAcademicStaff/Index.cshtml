@model List<BilBasarEgitim.Models.Dtos.AcademicStaff.AcademicStaffPreviewForAdminDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<main class="main" id="main">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-12 text-right mb-3">
                    <a href="/admin/akademik-kadro/yukle" class="btn btn-primary">Eğitmen Kaydet</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Eğitmenler</h5>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Eğitim Dalı</th>
                                    <th scope="col">Görünüyor Mu?</th>
                                    <th scope="col">Kayıt Tarihi</th>
                                    <th scope="col">Yayınla</th>
                                    <th scope="col">Yayından Kaldır</th>
                                    <th scope="col">Düzenle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {


                                }
                                else
                                {

                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@item.FullName</td>
                                            <td>@item.EdicatorField</td>
                                            <td>@item.Check</td>
                                            <td>@item.CreateDate</td>
                                            <td><a href="@Url.Action("UpdateRelease","AdminAcademicStaff",new {id=item.Id, check = true})" class="btn btn-success">Göster</a></td>
                                            <td><a href="@Url.Action("UpdateRelease","AdminAcademicStaff", new {id= item.Id,check= false})" class="btn btn-danger">Gizle</a></td>
                                            <td><a href="@Url.Action("Update","AdminAcademicStaff", new {id= item.Id})" class="btn btn-danger">Düzenle</a></td>
                                            <td><a href="@Url.Action("Delete","AdminAcademicStaff", new {id = item.Id})" class="btn btn-danger">Sil</a></td>

                                        </tr>
                                        i++;
                                    }
                                }



                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>

