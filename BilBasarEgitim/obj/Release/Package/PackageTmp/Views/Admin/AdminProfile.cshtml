
@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<main id="main" class="main">


    <section class="section profile">
        <div>
            <div class="col-xl-12">
            
                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">

                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profil</button>
                            </li>

                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Düzenle</button>
                            </li>

                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Şifre Değiştir</button>
                            </li>

                        </ul>
                        <div class="tab-content pt-2">

                            <div class="tab-pane fade show active profile-overview" id="profile-overview">

                                <div class="row mt-3">
                                    <div class="col-lg-3 col-md-4 label ">Ad Soyad</div>
                                    <div class="col-lg-9 col-md-8">@Session["FullName"].ToString()</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Email</div>
                                    <div class="col-lg-9 col-md-8">@Session["Email"].ToString()</div>
                                </div>

                            </div>
                            @{
                                Html.RenderAction("ProfileUpdate", "Admin");
                            }
                            
                           

                            @{
                                Html.RenderAction("ChangePassword", "Admin");
                            }
                        

                        </div><!-- End Bordered Tabs -->
                       
                    </div>
                </div>

            </div>
            <div>
                <h6 style="color: red">@ViewBag.Message</h6>
            </div>
        </div>
    </section>

</main><!-- End #main -->
