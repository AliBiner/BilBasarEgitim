@model List<BilBasarEgitim.Models.Dtos.NoticeForAdminDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<main class="main" id="main">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-12 text-right mb-3">
                    <a href="/admin/duyurular/yukle" class="btn btn-primary">Duyuru Ekle</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Duyurular</h5>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Yayında Mı?</th>
                                    <th scope="col">Yükleme Tarihi</th>
                                    <th scope="col">Yayınla</th>
                                    <th scope="col">Yayından Kaldır</th>
                                    <th scope="col">Düzenle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {


                                }
                                else
                                {

                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <th scope="row">@i</th>
                                    <td><a href="~/Upload/Images/Notice/@item.NoticeUrl"><img src="~/Upload/Images/Notice/@item.NoticeUrl" style="max-height: 200px; max-width: 200px;" /></a></td>
                                    <td>@item.Header</td>
                                    <td>@item.Description</td>
                                    <td>@item.Check</td>
                                    <td>@item.CreateDate</td>
                                    <td><a href="@Url.Action("UpdateRelease","AdminNotice",new {id=item.Id, check = true})" class="btn btn-success">Yayınla</a></td>
                                    <td><a href="@Url.Action("UpdateRelease","AdminNotice", new {id= item.Id,check= false})" class="btn btn-danger">Kaldır</a></td>
                                    <td><a href="@Url.Action("Update","AdminNotice", new {id= item.Id})" class="btn btn-danger">Düzenle</a></td>
                                    <td><a href="@Url.Action("Delete","AdminNotice", new {id = item.Id})" class="btn btn-danger">Sil</a></td>

                                </tr>
                                        i++;
                                    }
                                }



                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>

