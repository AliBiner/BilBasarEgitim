@model List<BilBasarEgitim.Models.Dtos.SliderForAdminDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<main class="main" id="main">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-12 text-right mb-3">
                    <a href="/admin/slider/yukle" class="btn btn-primary">Slider Ekle</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Slider</h5>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Yayında Mı?</th>
                                    <th scope="col">Yükleme Tarihi</th>
                                    <th scope="col">Yayınla</th>
                                    <th scope="col">Yayından Kaldır</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {


                                }
                                else
                                {

                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td ><a href="~/Upload/Images/Slider/@item.SliderUrl"><img src="~/Upload/Images/Slider/@item.SliderUrl" style="max-height: 400px; max-width: 400px;" /></a></td>
                                            <td>@item.Check</td>
                                            <td>@item.CreateDate</td>
                                            <td><a href="@Url.Action("UpdateRelease","AdminSlider",new {id=item.Id, check = true})" class="btn btn-success">Yayınla</a></td>
                                            <td><a href="@Url.Action("UpdateRelease","AdminSlider", new {id= item.Id,check= false})" class="btn btn-danger">Yayından Kaldır</a></td>
                                            <td><a href="@Url.Action("Delete","AdminSlider", new {id = item.Id})" class="btn btn-danger">Sil</a></td>
                                           
                                        </tr>
                                        i++;
                                    }
                                }



                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>

