@model List<BilBasarEgitim.Models.Dtos.Gallery.GalleryForAdminDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<main class="main" id="main">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-12 mb-3 row">
                   
                    <div class="col-md-6 ">
                        <a href="/admin/galeri/duzenle" class="btn btn-primary">Galeri Sırası Düzenle</a>
                    </div>
                    <div class=" col-md-6 text-right">
                        <a href="/admin/galeri/yukle" class="btn btn-primary">Galeri Ekle</a>
                    </div>
                    
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Galeri</h5>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Yayında Mı?</th>
                                    <th scope="col">Yükleme Tarihi</th>
                                    <th scope="col">Yayınla</th>
                                    <th scope="col">Yayından Kaldır</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {


                                }
                                else
                                {

                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td><a href="~/Upload/Images/Gallery/@item.ImageUrl"><img src="~/Upload/Images/Gallery/@item.ImageUrl" style="max-height: 300px; max-width: 300px;" /></a></td>
                                            <td>@item.Description</td>
                                            <td>@item.Check</td>
                                            <td>@item.CreateDate</td>
                                            <td><a href="@Url.Action("UpdateRelease","AdminGallery",new {id=item.Id, check = true})" class="btn btn-success">Yayınla</a></td>
                                            <td><a href="@Url.Action("UpdateRelease","AdminGallery", new {id= item.Id,check= false})" class="btn btn-danger">Yayından Kaldır</a></td>
                                            <td><a href="@Url.Action("Delete","AdminGallery", new {id = item.Id})" class="btn btn-danger">Sil</a></td>

                                        </tr>
                                        i++;
                                    }
                                }



                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>

