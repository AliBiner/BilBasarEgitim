<section data-bs-version="5.1" class="slider1 cid-tHf6nDD0s4 " id="slider1-1">
    @*data-interval="5000" data-bs-interval="5000"*@
    <div class="carousel slide carousel-fade" id="tL2YTQPxni" data-ride="carousel" data-bs-ride="carousel" data-interval="5000" data-bs-interval="5000">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.SliderForUserDtos.Count; i++)
            {
                if (i == 0)
                {
                    <li data-slide-to="@i" data-bs-slide-to="@i" class="active" data-target="#tL2YTQPxni" data-bs-target="#tL2YTQPxni"></li>


                }
                else
                {
                    <li data-slide-to="@i" data-bs-slide-to="@i" class="" data-target="#tL2YTQPxni" data-bs-target="#tL2YTQPxni"></li>
                }


            }

        </ol>
        <div class="carousel-inner">
            @{
                int j = 0;
            }
            @foreach (var item in Model.SliderForUserDtos)
            {
                <div class="carousel-item slider-image item @(j==0 ? "active":"")">
                    <div class="item-wrapper">
                        <img class="d-block w-100" src="~/Upload/Images/Slider/@item.SliderUrl" data-slide-to="@j" data-bs-slide-to="@j">
                    </div>
                </div>
                j++;
            }

        </div>
        <a class="carousel-control carousel-control-prev" role="button" data-slide="prev" data-bs-slide="prev" href="#tL2YTQPxni">
            <span class="mobi-mbri mobi-mbri-arrow-prev" aria-hidden="true"></span>
            <span class="sr-only visually-hidden">Previous</span>
        </a>
        <a class="carousel-control carousel-control-next" role="button" data-slide="next" data-bs-slide="next" href="#tL2YTQPxni">
            <span class="mobi-mbri mobi-mbri-arrow-next" aria-hidden="true"></span>
            <span class="sr-only visually-hidden">Next</span>
        </a>
    </div>
</section>

