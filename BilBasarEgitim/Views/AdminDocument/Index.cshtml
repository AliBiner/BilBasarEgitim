@model List<BilBasarEgitim.Models.Dtos.DocumentPreviewDto>
@{
    ViewBag.Title = "Dökümanlar";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<main id="main" class="main">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-12 text-right mb-3">
                    <a href="/Admin/Dokumanlar/Yukle" class="btn btn-primary">Döküman Yükle</a>
                </div>
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title">Dökümanlar</h5>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Döküman</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Yükleme Tarihi</th>
                                <th scope="col">Sil</th>
                            </tr>
                            </thead>
                            <tbody>
                            @if (Model != null)
                            {
                                int i = 1;

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.Description</td>
                                        <td><a href="/Upload/Documents/@item.DocumentUrl">@item.DocumentUrl</a></td>
                                        <td>@item.CreateDate</td>
                                        <td>
                                            <a class="btn btn-danger" href="/Admin/Dokumanlar/Sill/@item.Id">Sil</a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }


                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>