@model List<BilBasarEgitim.Models.Dtos.EducationalApplyPreviewDto>
@{
    ViewBag.Title = "GetAllApproval";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<main id="main" class="main">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"> Onaylanan Eğitim Başvuruları</h5>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Alanı</th>
                                    <th scope="col">Okul Adı</th>
                                    <th scope="col">Sınıf</th>
                                    <th scope="col">Başvuru Tarihi</th>
                                    <th scope="col">Detay</th>
                                    <th scope="col">Onayla</th>
                                    <th scope="col">Reddet</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.FullName</td>
                                        <td>@item.EducationalField</td>
                                        <td>@item.SchoolName</td>
                                        <td>@item.Grade</td>
                                        <td>@item.CreateDate</td>
                                        <td><a class="btn btn-primary" href="/Admin/EgitimBasvuru/Detay/@item.Id">Detay</a></td>
                                        <td><a class="btn btn-success" href="/Admin/EgitimBasvuru/Onay/@item.Id">Onayla</a></td>
                                        <td><a class="btn btn-danger" href="/Admin/EgitimBasvuru/Sil/@item.Id">Reddet</a></td>
                                    </tr>
                                    i++;
                                }

                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>

